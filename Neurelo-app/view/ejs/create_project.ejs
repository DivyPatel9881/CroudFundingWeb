<%- include("header"); %>
	<link rel="stylesheet" href="/create_project.css"/>
	<div class="container">
		<div class="well">
			<h2 class="header">CREATE A PROJECT</h2>
			<form action="/create-project" method="POST" class="form_detail">
			  <div class="form-group">
				<label for="Name"></label>
				<input type="text" class="form-control input-lg" id="Name" required placeholder="Name Of Project" name="name">
			  </div>
			  
			  <div class="form-group">
				  <label for="category"></label>
				  <select class="form-control input-lg" id="category" name="category" required>
					<option value="">Select a Category</option>
					<option value="Arts">Arts</option>
					<option value="Comics">Comics</option>
					<option value="Tech">Tech</option>
					<option value="Film">Film</option>
					<option value="Food">Food</option>
					<option value="Games">Games</option>
					<option value="Music">Music</option>
				  </select>
			  </div>
			  <div class="form-group">
				  <label for="desc"></label>
				  <textarea class="form-control input-lg" rows="5" id="desc" placeholder="Description" name="description"></textarea>
			  </div>
			  <div class="form-group">
				<label for="photo"></label>
				<input type="text" class="form-control input-lg" id="photo" required placeholder="Photo URL" name="photo">
			  </div>
			  <div class="form-group">
				<label for="video"></label>
				<input type="text" class="form-control input-lg" id="video" placeholder="Video URL" name="video">
			  </div>
			  <div class="form-group">
				<label for="goal"></label>
				<input type="text" class="form-control input-lg" id="goal" required placeholder="Goal Funding Required" name="goal">
			  </div>
			  <p class="acc_header">Account Details</p>
			  <hr>
			  <div class="form-group">
				<label for="accname"></label>
				<input type="text" class="form-control input-lg" id="accname" required placeholder="Account Holder's Name" name="accountholdername">
			  </div>
			  <div class="form-group">
				<label for="accnum"></label>
				<input type="text" class="form-control input-lg" id="accnum" required placeholder="Account Number" name="accountnum">
			  </div>
			  <div class="form-group">
				<label for="ifsc"></label>
				<input type="text" class="form-control input-lg" id="rout" required placeholder="Routing Number" name="rout">
			  </div>
			  <button type="submit" class="btn btn-primary btn-lg">CREATE</button>
			</form>
		</div>
	</div>
<%- include("footer"); %>
