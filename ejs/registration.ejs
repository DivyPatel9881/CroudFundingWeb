<% include header.ejs %>
	<link rel="stylesheet" href="/registration.css"/>
	<div class="container">
		<div class="well">
			<h2 class="header">SIGN UP</h2>
			<form action="/register/signup" method="POST" class="form_detail">
			  <div class="form-group">
				<label for="email"></label>
				<input type="email" class="form-control input-lg" id="email" required placeholder="Email" name="email">
			  </div>
			  <div class="form-group">
				<label for="pwd"></label>
				<input type="password" class="form-control input-lg" id="pwd" required placeholder="Password" name="password">
			  </div>
			  <button type="submit" class="btn btn-primary btn-lg">SIGN UP</button>
			</form>
		</div>
	</div>
