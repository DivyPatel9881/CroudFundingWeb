<%- include("header"); %>
	<link rel="stylesheet" href="/login.css"/>
	<div class="container">
		<div class="well">
			<h2 class="header">LOGIN</h2>
			<form action="/login" method="POST" class="form_detail">
			  <div class="form-group">
				<label for="uname"></label>
				<input type="text" class="form-control input-lg" id="uname" required placeholder="Username" name="username">
			  </div>
			  <div class="form-group">
				<label for="pwd"></label>
				<input type="password" class="form-control input-lg" id="pwd" required placeholder="Password" name="password">
			  </div>
			  <button type="submit" class="btn btn-primary btn-lg">SIGN UP</button>
			</form>
		</div>
	</div>
<%- include("footer") %>
